<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.mappers.SixOneMapper">
	<!-- 49选7 类型 -->

	<!--可重用的SQL代码段 -->
	<sql id="sixone_column">select
		t.id,t.qishu,t.first,t.second,t.third,t.fourth,t.fifth,t.sixth,t.seventh
		from tb_caipiao_six_one t
	</sql>

	<!--可重用的SQL代码段 -->
	<sql id="sixone_column1">select
		id,qishu,first,second,third,fourth,fifth,sixth,seventh
		from
		tb_caipiao_six_one
	</sql>

	<!--可重用的SQL代码段 -->
	<sql id="sixone_column2">insert into tb_caipiao_six_one
		(qishu,first,second,third,fourth,fifth,sixth,seventh)
		from tb_caipiao_six_one
	</sql>

	<!-- 查询所有数据 -->
	<select id="way0" resultType="SixOne">
		<include refid="sixone_column" />
	</select>
	<!-- 根据 单个条件 查询 数据 .若条件均不符合时则 查询全部 -->
	<select id="way1" parameterType="SixOne" resultType="SixOne">
		<include refid="sixone_column1" />
		<where>
			<if test="id!=null">
				id=#{id}
			</if>
			<if test="qishu!=null">
				qishu=#{qishu}
			</if>
			<if test="first!=null">
				first=#{first}
			</if>
			<if test="second!=null">
				second=#{second}
			</if>
			<if test="third!=null">
				third=#{third}
			</if>
			<if test="fourth!=null">
				fourth=#{fourth}
			</if>
			<if test="fifth!=null">
				fifth=#{fifth}
			</if>
			<if test="sixth!=null">
				sixth=#{sixth}
			</if>
			<if test="seventh!=null">
				seventh=#{seventh}
			</if>
		</where>
	</select>

	<insert id="way2" parameterType="SixOne">
		<include refid="sixone_column2" />
		values
		(#{qishu},#{first},#{second},#{third},#{fourth},#{fifth},#{sixth},#{seventh})
	</insert>
	<!-- 根据期数qishu查询整条数据 ,参数类型是 Integer 类型 -->
	<select id="way3" parameterType="Integer" resultType="sixone">
		<include refid="sixone_column" />
		where t.qishu=#{qishu}
	</select>
</mapper>
